# Database
DATABASE_URL=postgresql://pr_roulette_user:PASSWORD@localhost:5432/pr_roulette

# App URL
APP_URL=https://pr-roulette.bixbyte.io

# NextAuth
NEXTAUTH_SECRET=generate-a-32-char-secret
NEXTAUTH_URL=https://pr-roulette.bixbyte.io

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Slack API Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret

# Redis Cache (optional - falls back to in-memory if not configured)
REDIS_URL=redis://localhost:6379

# App Configuration
NODE_ENV=development
LOG_LEVEL=info  # debug | info | warn | error (default: info in production, debug in development)

# Metrics (optional - required for /api/metrics in production)
METRICS_TOKEN=generate-a-secure-token-for-metrics-access

# Cron (required for /api/cron/* endpoints)
CRON_SECRET=generate-a-secure-token-for-cron-access
